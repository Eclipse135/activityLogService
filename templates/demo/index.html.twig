{% extends 'base.html.twig' %}

{% block title %}Demo Page of Actions{% endblock %}

{% block body %}
    <div class="py-12 bg-gray-400 min-h-screen">
        <div class="mx-auto max-w-7xl px-6 text-center lg:px-8">
            <div class="mx-auto max-w-2xl">
                <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Easy Actions:</h2>
            </div>
            <ul role="list"
                class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-6 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8">
                <li class="rounded-2xl bg-gray-800 px-8 py-4 flex flex-col justify-between">
                    <h3 class="text-base font-semibold leading-7 tracking-tight text-white">User Buys Product</h3>
                    <p class="text-sm leading-6 text-gray-400">Random user and random product will be used</p>
                    <form action="{{ path('app_demo_action') }}" method="post">
                        <button type="submit"
                                name="action"
                                value="buy_product"
                                class="w-full rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            Buy Product
                        </button>
                    </form>
                </li>
                <li class="rounded-2xl bg-gray-800 px-8 py-4 flex flex-col justify-between">
                    <h3 class="text-base font-semibold leading-7 tracking-tight text-white">Product Granted to User</h3>
                    <p class="text-sm leading-6 text-gray-400">Random user, random product and random admin will be
                        used</p>
                    <form action="{{ path('app_demo_action') }}" method="post">
                        <button type="submit"
                                name="action"
                                value="grant_product"
                                class="w-full rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            Grant Product
                        </button>
                    </form>
                </li>
                <li class="rounded-2xl bg-gray-800 px-8 py-4 flex flex-col justify-between">
                    <h3 class="text-base font-semibold leading-7 tracking-tight text-white">Edit Product</h3>
                    <p class="text-sm leading-6 text-gray-400">Random product and random admin will be used</p>
                    <form action="{{ path('app_demo_action') }}" method="post">
                        <button type="submit"
                                name="action"
                                value="edit_product"
                                class="w-full rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            Edit Product
                        </button>
                    </form>
                </li>
            </ul>
        </div>
        <div class="mx-auto max-w-7xl px-6 text-center lg:px-8">
            <div class="mt-8 flow-root rounded-2xl bg-gray-800 px-8 py-4">
                <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                        {% if logs|length > 0 %}
                            <table class="min-w-full divide-y divide-gray-300">
                                <thead>
                                <tr>
                                    <th scope="col"
                                        class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white sm:pl-0">
                                        Date & Time
                                    </th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">
                                        Type
                                    </th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">
                                        Log
                                    </th>
                                </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                {% for log in logs %}
                                    <tr>
                                        <td class="whitespace-nowrap py-4 pr-3 text-sm text-white text-left">
                                            {{ log.date }}
                                        </td>
                                        <td class="whitespace-nowrap px-3 pr-3 text-sm text-white text-left">
                                            {{ log.type }}
                                        </td>
                                        <td class="py-4 px-3 text-sm text-white text-left">
                                            {{ log.message }}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p class="text-white">Ups, nothing yet to show, try fast actions...</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
